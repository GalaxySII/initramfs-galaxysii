    mkdir /data/property 0700 root root

   # for TRP/TIS
    write /data/.psm.info 1
    chown system system /data/.psm.info
    chmod 0600 /data/.psm.info

    #over-wirte-permission.
    chmod 0771 /data/app
    chown system system /data/app    

    # create log system
    mkdir /data/log 0777 system system

    chmod 0777 /data/log
